<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JokesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/jokes_banner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner1" />

            <ImageView
                android:id="@+id/jokes_banner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/jokes_banner1"
                android:layout_marginBottom="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner2" />

            <ImageView
                android:id="@+id/jokes_banner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/jokes_banner2"
                android:layout_marginBottom="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner3" />

            <ImageView
                android:id="@+id/jokes_banner4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/jokes_banner3"
                android:layout_marginBottom="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner4" />

            <ImageView
                android:id="@+id/jokes_banner5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/jokes_banner4"
                android:scaleType="centerCrop"
                android:src="@drawable/banner5"
                />


        </RelativeLayout>
    </ScrollView>
</FrameLayout>